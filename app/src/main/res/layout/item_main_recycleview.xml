<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/r1"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    android:gravity="center_vertical"
    android:background="@drawable/basic_border_shadow"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/r_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1.2dp"
        android:layout_marginRight="1.2dp"
        android:background="@drawable/basic_border_corner_15">

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/tshirt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_product_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="상품명"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="100,000원"
                android:textColor="#424242"
                android:textSize="19sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

